CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)

.PHONEY: all clean oclean flcean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(NAME): m.h $(OBJ)
	$(CC) -c -o $@ $<

clean:
	-@$(RM) *.swp *~ $(NAME)

oclean:
	-@$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
