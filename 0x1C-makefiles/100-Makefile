CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

.PHONEY: all clean oclean flcean re

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(NAME): m.h $(OBJ)
	$(CC) -c -o $@ $<

clean:
	-@$(RM) *.swp *~ $(NAME)

oclean:
	-@$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

$(OBJ) = m.h
