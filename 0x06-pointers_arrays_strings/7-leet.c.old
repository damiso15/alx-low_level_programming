#include "main.h"

/**
 * leet - a function that encodes a string into 1337.
 * @s: an input character
 * Return: string
 */
char *leet(char *s)
{
	int num = 0;

	while (s[num] != '\0')
	{
		if (s[num] == 'a' || s[num] == 'A')
			s[num] = '4';
		if (s[num] == 'e' || s[num] == 'E')
			s[num] = '3';
		if (s[num] == 'o' || s[num] == 'O')
			s[num] = '0';
		if (s[num] == 't' || s[num] == 'T')
			s[num] = '7';
		if (s[num] == 'l' || s[num] == 'L')
			s[num] = '1';
		num++;
	}
	return (s);
}
